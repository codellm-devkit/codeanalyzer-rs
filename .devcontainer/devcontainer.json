{
    "name": "CodeAnalyzer-Rust",
    "dockerFile": "Dockerfile",
    "context": "..",
    "remoteUser": "vscode",
    "workspaceFolder": "/codeanalyzer-rs",
    "workspaceMount": "source=${localWorkspaceFolder},target=/codeanalyzer-rs,type=bind,consistency=delegated",
    "runArgs": ["-h", "codenet"],
    "customizations": {
        "vscode": {
            "settings": {
                "markdown-preview-github-styles.colorTheme": "light",
                "cSpell.words": [
                    "northstar",
                    "cyclomatic",
                    "stdlibs"
                ],
                "files.exclude": {
                    "**/.git": true,
                    "**/.DS_Store": true
                },
                // Rust-specific settings
                "rust-analyzer.checkOnSave.command": "clippy",
                "rust-analyzer.inlayHints.enable": true,
                "rust-analyzer.cargo.allFeatures": true,
                "editor.formatOnSave": true
            },
            "extensions": [
                // Rust extensions
                "rust-lang.rust-analyzer",
                "vadimcn.vscode-lldb",
                "serayuzgur.crates",
                "tamasfe.even-better-toml",
                // Git and general development
                "donjayamanne.githistory",
                // Markdown support
                "bierner.github-markdown-preview",
                "yzhang.markdown-all-in-one",
                "hnw.vscode-auto-open-markdown-preview",
                "davidanson.vscode-markdownlint",
                "bierner.markdown-preview-github-styles",
                // Other useful tools
                "streetsidesoftware.code-spell-checker",
                "ms-azuretools.vscode-docker"
            ]
        }
    },
    // Install Rust tools and dependencies
    "postCreateCommand": "cargo build"
}